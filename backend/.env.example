JWT_SECRET=replace_with_strong_secret
PORT=3001
MONGODB_URI=mongodb://127.0.0.1:27017/campusmart

# SMTP configuration for NodeMailer (required for real email sending)
# Use your provider settings (e.g., Gmail, Outlook, SendGrid, Mailgun)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username@example.com
SMTP_PASS=your_smtp_password
# Optional: use a well-known provider instead of host/port (e.g., gmail, outlook)
SMTP_SERVICE=
# Optional: force secure SMTP; set to true for port 465
SMTP_SECURE=false
# Optional: allow self-signed certs in dev
SMTP_ALLOW_INSECURE=false
# Optional: override sender; defaults to SMTP_USER
SMTP_FROM="Campus Mart <no-reply@example.com>"
OTP_FROM=

# Razorpay keys (optional, unrelated to OTP)
RAZORPAY_KEY_ID=your_key_id
RAZORPAY_KEY_SECRET=your_key_secret

# OpenAI (optional, unrelated to OTP)
OPENAI_API_KEY=your_openai_key